---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Page Not Found</title>
	</head>
	<body class="bg-[#f8fafc] dark:bg-[#0f0f0f] text-black dark:text-white"></body>
		<Header />
		<div class="content flex flex-col items-center p-8">
			<h1 class="font-bold text-6xl">Oops!</h1>
			<p class="font-semibold text-xl p-2">This page doesn't exist. Try another one?</p>
			<article class="prose dark:prose-invert prose-h3:prose-2xl prose-li:list-disc prose-li:font-light flex-grow">
				<slot />
			</article>
		</div>
		<Footer />
	</body>
</html>