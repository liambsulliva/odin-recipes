---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

const { frontmatter } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
	</head>
	<body class="bg-[#f8fafc] dark:bg-[#0f0f0f] text-black dark:text-white">
		<Header />
		<div class="content flex flex-col items-center max-md:items-start p-8">
			<img class="w-full h-48 object-cover p-6" src={frontmatter.img} alt={frontmatter.title}>
			<h1 class="font-bold text-6xl">{frontmatter.title}</h1>
			<p class="font-semibold text-xl p-2 max-md:px-0 pb-12">{frontmatter.description}</p>
			<article class="prose dark:prose-invert prose-h3:prose-2xl prose-li:list-disc prose-li:font-light">
				<slot />
			</article>
		</div>
		<Footer />
	</body>
</html>

